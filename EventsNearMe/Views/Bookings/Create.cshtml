@model EventsNearMe.Models.Booking

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Booking</h4>
    <hr />

    <div class="card">
        <div class="card-body">
            <div class="card-text"><h2>Booking id: @Html.DisplayFor(model => model.EventId)</h2></div>
            <div class="card-text"><h3>Event: @Html.DisplayFor(model => model.Event.Name)</h3></div>
            <div class="card-text">Organizer: @Html.DisplayFor(model => model.Event.Organizer.UserName)</div>
            <div class="card-text">Price: @Html.DisplayFor(model => model.Event.Price)</div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
