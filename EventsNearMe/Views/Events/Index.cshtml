@model IEnumerable<EventsNearMe.Models.Event>

@{
    ViewBag.Title = "Index";
}

<table class="table">
    <tr>
        <th>
            Event name
        </th>
        <th>
            Organizer
        </th>
        <th>
           Starting at
        </th>
        <th>
            Duration
        </th>
        <th>
            Free
        </th>
        <th>
            Price
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <th>
        @Html.DisplayFor(modelItem => item.Organizer.UserName)
    </th>
    <td>
        @Html.DisplayFor(modelItem => item.StartingDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.eventLength)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IsFree)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.EventID }) |
        @Html.ActionLink("Details", "Details", new { id = item.EventID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.EventID })
    </td>
</tr>
}

</table>

<p>
    @Html.ActionLink("Create New Event", "Create", null, new { @class = "btn btn-success float-right" })
</p>