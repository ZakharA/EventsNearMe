<section class="col-xl-6 col-lg-6 col-sm-12 mb-2">
    <div class="card">
        <img src="~/Content/Images/@Page.Event.CoverImage" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">
                @Page.Event.Name 
                <span class="badge badge-info">@Page.Event.StartingDate.ToString("dd/MM/yyyy") - @{ @Html.Raw(Page.Event.StartingDate.AddDays(@Page.Event.eventLength).ToString("dd/MM/yyyy")); }</span></p>
            </h5>
            <p class="card-text">@Page.Event.Description</p>
            <p class="card-text">

@Html.ActionLink("Read more", "Details", "Events", new { id = Page.Event.EventID }, htmlAttributes: new { @class = "card-link" })
</div>
    </div>
</section> 